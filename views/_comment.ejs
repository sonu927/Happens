<link rel="stylesheet" href="/css/_comment.css">

<li class="comment-li" id="comment-<%= c._id%>">
    <div id="comment-header">
        <div id="c-img-content">
            <div id="c-img-container">
                <img src="<%= c.user.avatar%>" alt="<%= c.user.name%>" >
            </div>
            
            <div>
                <div>
                    <small><%= c.user.name%></small>
                    
                </div>
                <div>
                    <big>
                        <p style="margin: 0;"><%= c.content%></p>
                    </big>
                    
                </div>
            </div>
        </div>

        <% if(locals.user){%>
            <div class="like-container">
                <a id="main-frame-like-<%= c.id%>" href="/likes/toggle/?id=<%= c._id%>&type=Comment&reaction=👍" data-likes="<%= c.likes.length%>" class="toggle-like-button like-btn">
                    <% let like; %>
                    <% for(l of c.likes){%>
                        <% if(l.user == locals.user.id){%>
                            <% like = l; %>    
                        <%} %>    
                    <%} %>
                    <%if(like){%>
                        <%= c.likes.length%> <%= like.reaction%>    
                    <%}else{%>
                        <%= like%>
                        <%= c.likes.length%> 👍
                    <%}%>
                </a>
                <small>
                    <div class="reaction-container">
                        <a  href="/likes/toggle/?id=<%= c._id%>&type=Comment&reaction=👍" data-likes="<%= c.likes.length%>" class="toggle-like-button">
                             👍
                        </a>
                        <a  href="/likes/toggle/?id=<%= c._id%>&type=Comment&reaction=❤️" data-likes="<%= c.likes.length%>" class="toggle-like-button">
                             ❤️
                        </a>
                        <a  href="/likes/toggle/?id=<%= c._id%>&type=Comment&reaction=😂" data-likes="<%= c.likes.length%>" class="toggle-like-button">
                             😂
                        </a>
                        <a  href="/likes/toggle/?id=<%= c._id%>&type=Comment&reaction=😲" data-likes="<%= c.likes.length%>" class="toggle-like-button">
                           😲
                        </a>
                        <a  href="/likes/toggle/?id=<%= c._id%>&type=Comment&reaction=😥" data-likes="<%= c.likes.length%>" class="toggle-like-button">
                             😥
                        </a>
                        <a  href="/likes/toggle/?id=<%= c._id%>&type=Comment&reaction=😡" data-likes="<%= c.likes.length%>" class="toggle-like-button">
                             😡
                        </a>
                    </div>
                </small>
            </div>
            <%}else{%>
                <div>
                    <p><%= c.likes.length%> Reaction</p>
                </div>
                
            <%} %>
        
        <div class="c-delete-btn">
            <% if(locals.user && locals.user.id == c.user.id){%>
                
                    <a class="comment-delete-btn" href="/comments/destroy/<%= c.id%>"><i class="fas fa-trash"></i></a> 
            <%} %>
        </div>
    </div>
   
    
</li>