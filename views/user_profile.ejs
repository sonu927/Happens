<link rel="stylesheet" href="/css/user_profile.css">


<% if(user.id == profile_user.id){%>

    <div>
        <img src="<%= profile_user.avatar%>" width="150" height="150" alt="Image">

        <h1><%= profile_user.name %></h1>
        <h1><%= profile_user.email %></h1>
        <button>Edit Profile</button>
        <form action="/users/update/<%= profile_user.id%>" enctype="multipart/form-data" method="post">
            <input type="text" name="name" value="<%= profile_user.name %>">
            <input type="email" name="email" value="<%= profile_user.email %>">
            <input type="file" name="avatar" placeholder="Profile Picture">

            <input type="submit" value="Save">

        </form>
    </div>
    
<%}else{%>
    <div>
        <img src="<%= profile_user.avatar%>" width="150" height="150" alt="Image">

        <h1><%= profile_user.name %></h1>
        <h1><%= profile_user.email %></h1>
    </div>
    
<%}%>


<div id="users-posts">
    <% for(p of all_posts){%>
        <div class="single-post">
            <% if(locals.user && locals.user.id == p.user.id){%>
                <small><a class="post-delete-btn" href="/posts/destroy/<%= p.id%>">X</a></small>
            <%} %>
            <img src="<%= p.photo %>" alt="<%= p.caption %>" width="100" height="100">
            <small><%= p.caption %></small>

        </div>    
    <%}%>

</div>