<link rel="stylesheet" href="/css/user_signin.css">

<div id="signin-container">
    <div>
        <h1>Sign in</h1>
    </div>

    <div id="signin-form-container">
        <form id="signin-form" action="/users/create-session" method="post">
            <div class="input-div">
                <input class="form-input" type="email" name="email" placeholder="Email" required>
                <label class="form-label" for="email">Email</label>
            </div>
    
            <div class="input-div">
                <input class="form-input" type="password" name="password" placeholder="Password" required>
                <label class="form-label" for="password">Password</label>
            </div>
            <input type="submit" value="Sign In">
        </form>
    </div>
    
    <div id="signin-google-github">
        <div style="background-color: rgb(187, 35, 35);">
            <a href="/users/auth/google"><i class="fab fa-google"></i>&nbsp;Google</a>
        </div>
       
        <div style="background-color: black;">
            <a href="/users/auth/github"><i class="fab fa-github"></i>&nbsp;GitHub</a>
        </div>
        
    </div>

    
    <div id="forget-password">
        <a href="/users/reset-password">Forgot Password ?</a>
    </div>

</div>
